        let activeMultiplier = null;
        let activeEvent = null;
        let nextEventTime = Date.now() + (Math.random() * 300000 + 300000);
        
        function toggleCollapsible(button, contentId) {
            button.classList.toggle("active");
            const content = document.getElementById(contentId);
            content.classList.toggle("show");
        }
        
        function initializePrestige() {
            if (gameState.prestigeCurrency > 0) {
                gameState.clickPower = 1 + Math.floor(gameState.prestigeCurrency * 0.1);
                gameState.passiveIncome = Math.floor(gameState.prestigeCurrency * 0.1);
                gameState.prestigeBonus = 1 + (gameState.prestigeCurrency * 0.05);
                
                const startLevels = Math.floor(gameState.prestigeCurrency);
                gameState.upgrades.click.forEach(upgrade => {
                    if (upgrade.requiredRebirths <= gameState.totalRebirths) {
                        upgrade.level = Math.min(startLevels, 5);
                        gameState.clickPower += upgrade.power * upgrade.level;
                    }
                });
                gameState.upgrades.passive.forEach(upgrade => {
                    if (upgrade.requiredRebirths <= gameState.totalRebirths) {
                        upgrade.level = Math.min(startLevels, 5);
                        gameState.passiveIncome += upgrade.power * upgrade.level;
                    }
                });
            }
        }
        
        function checkRandomEvent() {
            if (!activeEvent && Date.now() >= nextEventTime) {
                startRandomEvent();
            }
        }
        
        function startRandomEvent() {
            const event = randomEvents[Math.floor(Math.random() * randomEvents.length)];
            activeEvent = {
                ...event,
                endTime: Date.now() + (event.duration * 1000)
            };
            
            showEventBanner(event);
            
            setTimeout(() => {
                activeEvent = null;
                hideEventBanner();
                nextEventTime = Date.now() + (Math.random() * 300000 + 300000);
            }, event.duration * 1000);
        }
        
        function showEventBanner(event) {
            const banner = document.getElementById('eventBanner');
            banner.innerHTML = `
                <div class="event-title">${event.name}</div>
                <div class="event-description">${event.description}</div>
                <div class="event-timer" id="eventTimer">2:00</div>
            `;
            banner.style.borderColor = event.color;
            banner.style.display = 'block';
        }
        
        function hideEventBanner() {
            document.getElementById('eventBanner').style.display = 'none';
        }
        
        function updateEventTimer() {
            if (activeEvent) {
                const timeLeft = Math.max(0, activeEvent.endTime - Date.now());
                const minutes = Math.floor(timeLeft / 60000);
                const seconds = Math.floor((timeLeft % 60000) / 1000);
                const timerElement = document.getElementById('eventTimer');
                if (timerElement) {
                    timerElement.textContent = `${minutes}:${seconds.toString().padStart(2, '0')}`;
                }
            }
        }
        
        function getEventMultiplier(type, upgradeId = null) {
            if (!activeEvent) return 1;
            
            switch(activeEvent.type) {
                case 'clickMultiplier':
                    return type === 'click' ? activeEvent.multiplier : 1;
                case 'passiveMultiplier':
                    return type === 'passive' ? activeEvent.multiplier : 1;
                case 'specificUpgrade':
                    return upgradeId === activeEvent.upgradeId ? activeEvent.multiplier : 1;
                case 'allMultiplier':
                    return activeEvent.multiplier;
                default:
                    return 1;
            }
        }
        
        function calculatePrestigeGain() {
            return Math.floor(gameState.totalRebirths / 10);
        }
        
        function initializeDailyQuests() {
            const today = new Date().toDateString();
            
            if (gameState.lastQuestReset !== today) {
                gameState.dailyQuests = [];
                gameState.lastQuestReset = today;
                
                const shuffled = [...questTemplates].sort(() => 0.5 - Math.random());
                for (let i = 0; i < 3; i++) {
                    gameState.dailyQuests.push({
                        ...shuffled[i],
                        progress: 0,
                        completed: false,
                        claimed: false,
                        startValue: getQuestStartValue(shuffled[i].type)
                    });
                }
                
                saveGame();
            }
            
            updateQuestNotification();
        }
        
        function getQuestStartValue(type) {
            switch(type) {
                case 'clicks': return gameState.totalClicks;
                case 'upgrades': return gameState.upgradesBought;
                default: return 0;
            }
        }
        
        function updateQuestProgress() {
            let hasUpdate = false;
            
            gameState.dailyQuests.forEach(quest => {
                if (!quest.completed) {
                    let currentValue = 0;
                    
                    switch(quest.type) {
                        case 'clicks':
                            currentValue = gameState.totalClicks - quest.startValue;
                            break;
                        case 'upgrades':
                            currentValue = gameState.upgradesBought - quest.startValue;
                            break;
                        case 'production':
                            currentValue = gameState.passiveIncome * gameState.rebirthMultiplier * gameState.prestigeBonus;
                            break;
                        case 'wealth':
                            currentValue = gameState.currency;
                            break;
                    }
                    
                    quest.progress = Math.min(currentValue, quest.target);
                    
                    if (quest.progress >= quest.target) {
                        quest.completed = true;
                        hasUpdate = true;
                    }
                }
            });
            
            if (hasUpdate) {
                updateQuestNotification();
            }
        }
        
        function updateQuestNotification() {
            const notification = document.getElementById('questNotification');
            const hasClaimable = gameState.dailyQuests.some(q => q.completed && !q.claimed);
            notification.style.display = hasClaimable ? 'flex' : 'none';
        }
        
        function showQuestsModal() {
            updateQuestProgress();
            renderQuests();
            document.getElementById('questsModal').style.display = 'block';
            updateQuestTimer();
        }
        
        function hideQuestsModal() {
            document.getElementById('questsModal').style.display = 'none';
        }
        
        function renderQuests() {
            const questsList = document.getElementById('questsList');
            questsList.innerHTML = '';
            
            gameState.dailyQuests.forEach((quest, index) => {
                const questElement = document.createElement('div');
                questElement.className = `quest-item ${quest.completed ? 'completed' : ''} ${quest.claimed ? 'claimed' : ''}`;
                
                let rewardText = '';
                switch(quest.reward.type) {
                    case 'currency':
                        rewardText = `${formatNumber(quest.reward.amount)} dukat√≥w`;
                        break;
                    case 'multiplier':
                        rewardText = `x${quest.reward.multiplier} produkcja na ${quest.reward.duration/60} minut`;
                        break;
                    case 'stone':
                        rewardText = `${quest.reward.amount} Kamie≈Ñ Filozoficzny`;
                        break;
                }
                
                questElement.innerHTML = `
                    <div class="quest-title">${quest.title}</div>
                    <div class="quest-description">${quest.description}</div>
                    <div class="quest-progress">Postƒôp: ${formatNumber(quest.progress)}/${formatNumber(quest.target)}</div>
                    <div class="quest-reward">Nagroda: ${rewardText}</div>
                    ${quest.completed && !quest.claimed ? 
                        `<button class="claim-button" onclick="claimReward(${index})">Odbierz Nagrodƒô</button>` : 
                        quest.claimed ? '<div style="color: #888;">Odebrano</div>' : ''}
                `;
                
                questsList.appendChild(questElement);
            });
        }
        
        function claimReward(questIndex) {
            const quest = gameState.dailyQuests[questIndex];
            if (!quest.completed || quest.claimed) return;
            
            quest.claimed = true;
            
            switch(quest.reward.type) {
                case 'currency':
                    gameState.currency += quest.reward.amount;
                    break;
                case 'multiplier':
                    activateMultiplier(quest.reward.multiplier, quest.reward.duration);
                    break;
                case 'stone':
                    gameState.rebirthCurrency += quest.reward.amount;
                    gameState.rebirthMultiplier = 1 + (gameState.rebirthCurrency * 0.5);
                    break;
            }
            
            updateDisplay();
            updateQuestNotification();
            renderQuests();
            saveGame();
        }
        
        function activateMultiplier(multiplier, duration) {
            if (activeMultiplier) {
                clearTimeout(activeMultiplier.timeout);
            }
            
            activeMultiplier = {
                multiplier: multiplier,
                                endTime: Date.now() + (duration * 1000),
                timeout: setTimeout(() => {
                    activeMultiplier = null;
                    updateDisplay();
                }, duration * 1000)
            };
            
            updateDisplay();
        }
        
        function updateQuestTimer() {
            const timerElement = document.getElementById('questTimer');
            const now = new Date();
            const tomorrow = new Date(now);
            tomorrow.setDate(tomorrow.getDate() + 1);
            tomorrow.setHours(0, 0, 0, 0);
            
            const timeLeft = tomorrow - now;
            const hours = Math.floor(timeLeft / (1000 * 60 * 60));
            const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);
            
            timerElement.textContent = `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
        }
        
        function formatNumber(num) {
            if (num >= 1000000000000) return (num / 1000000000000).toFixed(1) + 'T';
            if (num >= 1000000000) return (num / 1000000000).toFixed(1) + 'B';
            if (num >= 1000000) return (num / 1000000).toFixed(1) + 'M';
            if (num >= 1000) return (num / 1000).toFixed(1) + 'K';
            return Math.floor(num).toString();
        }
        
        function updateDisplay() {
            const questMultiplier = activeMultiplier ? activeMultiplier.multiplier : 1;
            const totalMultiplier = gameState.rebirthMultiplier * gameState.prestigeBonus * questMultiplier;
            
            document.getElementById('currency').textContent = formatNumber(gameState.currency);
            document.getElementById('perSecond').textContent = formatNumber(gameState.passiveIncome * totalMultiplier);
            document.getElementById('rebirthCurrency').textContent = gameState.rebirthCurrency;
            document.getElementById('rebirthMultiplier').textContent = gameState.rebirthMultiplier.toFixed(1);
            document.getElementById('prestigeCurrency').textContent = gameState.prestigeCurrency;
            document.getElementById('prestigeBonus').textContent = ((gameState.prestigeBonus - 1) * 100).toFixed(0);
            
            // Aktualizuj przycisk odrodzenia
            const rebirthButton = document.getElementById('rebirthButton');
            const requiredForRebirth = 1000000;
            if (gameState.totalEarned >= requiredForRebirth) {
                rebirthButton.disabled = false;
                const stonesGained = calculateRebirthGain();
                rebirthButton.textContent = `Odrodzenie (Otrzymasz ${stonesGained} Kamieni)`;
            } else {
                rebirthButton.disabled = true;
                rebirthButton.textContent = `Odrodzenie (Wymaga ${formatNumber(requiredForRebirth)} zarobku)`;
            }
            
            // Aktualizuj przycisk presti≈ºu
            const prestigeButton = document.getElementById('prestigeButton');
            if (gameState.totalRebirths >= 10) {
                prestigeButton.disabled = false;
                const crownsGained = calculatePrestigeGain();
                prestigeButton.textContent = `Cesarskie Odrodzenie (${crownsGained} Koron)`;
            } else {
                prestigeButton.disabled = true;
                prestigeButton.textContent = `Cesarskie Odrodzenie (Wymaga 10 odrodze≈Ñ)`;
            }
        }
        
        function calculateRebirthGain() {
            return Math.floor(Math.sqrt(gameState.totalEarned / 1000000));
        }
        
        function clickCoin(event) {
            const questMultiplier = activeMultiplier ? activeMultiplier.multiplier : 1;
            const eventMultiplier = getEventMultiplier('click');
            const totalMultiplier = gameState.rebirthMultiplier * gameState.prestigeBonus * questMultiplier * eventMultiplier;
            
            const earned = gameState.clickPower * totalMultiplier;
            gameState.currency += earned;
            gameState.totalEarned += earned;
            gameState.totalClicks++;
            
            updateDisplay();
            updateUpgradeButtons();
            updateQuestProgress();
            
            // Efekt wizualny
            const floatingText = document.createElement('div');
            floatingText.className = 'floating-text';
            floatingText.textContent = '+' + formatNumber(earned);
            floatingText.style.left = event.clientX + 'px';
            floatingText.style.top = event.clientY + 'px';
            document.body.appendChild(floatingText);
            setTimeout(() => floatingText.remove(), 1000);
        }
        
        function calculateUpgradeCost(upgrade) {
            return Math.floor(upgrade.baseCost * Math.pow(1.5, upgrade.level));
        }
        
        function buyUpgrade(type, index) {
            const upgrade = gameState.upgrades[type][index];
            
            // Sprawd≈∫ czy upgrade jest odblokowany
            if (upgrade.requiredRebirths > gameState.totalRebirths) {
                return;
            }
            
            const cost = calculateUpgradeCost(upgrade);
            
            if (gameState.currency >= cost) {
                gameState.currency -= cost;
                upgrade.level++;
                gameState.upgradesBought++;
                
                if (type === 'click') {
                    gameState.clickPower += upgrade.power;
                } else {
                    gameState.passiveIncome += upgrade.power;
                }
                
                updateDisplay();
                renderUpgrades();
                updateQuestProgress();
            }
        }
        
        function renderUpgrades() {
            const clickContainer = document.getElementById('clickUpgrades');
            const passiveContainer = document.getElementById('passiveUpgrades');
            
            clickContainer.innerHTML = '';
            passiveContainer.innerHTML = '';
            
            gameState.upgrades.click.forEach((upgrade, index) => {
                const cost = calculateUpgradeCost(upgrade);
                const affordable = gameState.currency >= cost;
                const isLocked = upgrade.requiredRebirths > gameState.totalRebirths;
                
                const upgradeElement = document.createElement('div');
                upgradeElement.className = `upgrade ${affordable && !isLocked ? 'affordable' : ''} ${upgrade.level > 0 ? 'purchased' : ''} ${isLocked ? 'locked' : ''}`;
                
                if (isLocked) {
                    upgradeElement.innerHTML = `
                        <div class="upgrade-name">${upgrade.name}</div>
                        <div class="upgrade-description">${upgrade.description}</div>
                        <div class="upgrade-cost">Koszt: ${formatNumber(cost)} dukat√≥w</div>
                        <div class="lock-icon">üîí</div>
                        <div class="unlock-info">Wymaga ${upgrade.requiredRebirths} odrodze≈Ñ</div>
                    `;
                } else {
                    upgradeElement.innerHTML = `
                        <div class="upgrade-name">${upgrade.name}</div>
                        <div class="upgrade-description">${upgrade.description}</div>
                        <div class="upgrade-cost">Koszt: ${formatNumber(cost)} dukat√≥w</div>
                        ${upgrade.level > 0 ? `<div class="upgrade-level">Poziom: ${upgrade.level}</div>` : ''}
                    `;
                    upgradeElement.onclick = () => buyUpgrade('click', index);
                }
                
                clickContainer.appendChild(upgradeElement);
            });
            
            gameState.upgrades.passive.forEach((upgrade, index) => {
                const cost = calculateUpgradeCost(upgrade);
                const affordable = gameState.currency >= cost;
                const eventMultiplier = getEventMultiplier('passive', upgrade.id);
                const isLocked = upgrade.requiredRebirths > gameState.totalRebirths;
                
                const upgradeElement = document.createElement('div');
                upgradeElement.className = `upgrade ${affordable && !isLocked ? 'affordable' : ''} ${upgrade.level > 0 ? 'purchased' : ''} ${isLocked ? 'locked' : ''}`;
                
                if (isLocked) {
                    upgradeElement.innerHTML = `
                        <div class="upgrade-name">${upgrade.name}</div>
                        <div class="upgrade-description">${upgrade.description}</div>
                        <div class="upgrade-cost">Koszt: ${formatNumber(cost)} dukat√≥w</div>
                        <div class="lock-icon">üîí</div>
                        <div class="unlock-info">Wymaga ${upgrade.requiredRebirths} odrodze≈Ñ</div>
                    `;
                } else {
                    upgradeElement.innerHTML = `
                        <div class="upgrade-name">${upgrade.name} ${eventMultiplier > 1 ? `(x${eventMultiplier})` : ''}</div>
                        <div class="upgrade-description">${upgrade.description}</div>
                        <div class="upgrade-cost">Koszt: ${formatNumber(cost)} dukat√≥w</div>
                        ${upgrade.level > 0 ? `<div class="upgrade-level">Poziom: ${upgrade.level}</div>` : ''}
                    `;
                    upgradeElement.onclick = () => buyUpgrade('passive', index);
                }
                
                passiveContainer.appendChild(upgradeElement);
            });
        }
        
        function updateUpgradeButtons() {
            const upgrades = document.querySelectorAll('.upgrade');
            upgrades.forEach((element, index) => {
                const allUpgrades = [...gameState.upgrades.click, ...gameState.upgrades.passive];
                if (index < allUpgrades.length) {
                    const upgrade = allUpgrades[index];
                    const cost = calculateUpgradeCost(upgrade);
                    const affordable = gameState.currency >= cost;
                    const isLocked = upgrade.requiredRebirths > gameState.totalRebirths;
                    
                    if (!isLocked) {
                        if (affordable && !element.classList.contains('affordable')) {
                            element.classList.add('affordable');
                        } else if (!affordable && element.classList.contains('affordable')) {
                            element.classList.remove('affordable');
                        }
                    }
                }
            });
        }
        
        function showRebirthModal() {
            const stonesGained = calculateRebirthGain();
            document.getElementById('rebirthGain').textContent = stonesGained;
            document.getElementById('rebirthModal').style.display = 'block';
        }
        
        function hideRebirthModal() {
            document.getElementById('rebirthModal').style.display = 'none';
        }
        
        function showPrestigeModal() {
            const crownsGained = calculatePrestigeGain();
            document.getElementById('prestigeGain').textContent = crownsGained;
            document.getElementById('prestigeModal').style.display = 'block';
        }
        
        function hidePrestigeModal() {
            document.getElementById('prestigeModal').style.display = 'none';
        }
        
        function performRebirth() {
            const stonesGained = calculateRebirthGain();
            
            gameState.rebirthCurrency += stonesGained;
            gameState.rebirthMultiplier = 1 + (gameState.rebirthCurrency * 0.5);
            gameState.totalRebirths++;
            
            // Reset podstawowy
            gameState.currency = 0;
            gameState.clickPower = 1;
            gameState.passiveIncome = 0;
            gameState.totalEarned = 0;
            
            gameState.upgrades.click.forEach(upgrade => upgrade.level = 0);
            gameState.upgrades.passive.forEach(upgrade => upgrade.level = 0);
            
            // Zastosuj bonusy presti≈ºowe
            initializePrestige();
            
            // Resetuj zadania dzienne
            gameState.dailyQuests.forEach(quest => {
                quest.progress = 0;
                quest.completed = false;
                quest.startValue = getQuestStartValue(quest.type);
            });
            
            hideRebirthModal();
            updateDisplay();
            renderUpgrades();
            updateQuestNotification();
        }
        
        function performPrestige() {
            const crownsGained = calculatePrestigeGain();
            
            // Dodaj korony cesarskie
            gameState.prestigeCurrency += crownsGained;
            
            // Zachowaj strukturƒô upgrad√≥w
            const upgradeStructure = JSON.parse(JSON.stringify(gameState.upgrades));
            
            // PE≈ÅNY RESET
            gameState = {
                currency: 0,
                clickPower: 1,
                passiveIncome: 0,
                rebirthCurrency: 0,
                rebirthMultiplier: 1,
                prestigeCurrency: gameState.prestigeCurrency,
                prestigeBonus: 1 + (gameState.prestigeCurrency * 0.05),
                totalEarned: 0,
                totalClicks: 0,
                upgradesBought: 0,
                totalRebirths: 0,
                lastQuestReset: new Date().toDateString(),
                dailyQuests: [],
                upgrades: upgradeStructure
            };
            
            // Resetuj poziomy wszystkich ulepsze≈Ñ
            gameState.upgrades.click.forEach(upgrade => upgrade.level = 0);
            gameState.upgrades.passive.forEach(upgrade => upgrade.level = 0);
            
            // Zastosuj bonusy presti≈ºowe
            initializePrestige();
            
            // Zainicjuj zadania dzienne
            initializeDailyQuests();
            
            hidePrestigeModal();
            updateDisplay();
            renderUpgrades();
            saveGame();
        }
        
        // Pasywny przych√≥d
        setInterval(() => {
            if (gameState.passiveIncome > 0) {
                const questMultiplier = activeMultiplier ? activeMultiplier.multiplier : 1;
                const eventMultiplier = getEventMultiplier('passive');
                const totalMultiplier = gameState.rebirthMultiplier * gameState.prestigeBonus * questMultiplier * eventMultiplier;
                
                // Oblicz przych√≥d z uwzglƒôdnieniem specjalnych mno≈ºnik√≥w dla konkretnych ulepsze≈Ñ
                let totalIncome = 0;
                gameState.upgrades.passive.forEach(upgrade => {
                    if (upgrade.level > 0 && upgrade.requiredRebirths <= gameState.totalRebirths) {
                        const upgradeMultiplier = getEventMultiplier('passive', upgrade.id);
                        totalIncome += upgrade.power * upgrade.level * totalMultiplier * (upgradeMultiplier > 1 ? upgradeMultiplier : 1);
                    }
                });
                
                gameState.currency += totalIncome;
                gameState.totalEarned += totalIncome;
                updateDisplay();
                updateUpgradeButtons();
                updateQuestProgress();
            }
        }, 1000);
        
        // Aktualizuj timery i sprawdzaj wydarzenia
        setInterval(() => {
            // Aktualizuj timer zada≈Ñ
            if (document.getElementById('questsModal').style.display === 'block') {
                updateQuestTimer();
            }
            
            // Sprawd≈∫ czy to nowy dzie≈Ñ
                        const today = new Date().toDateString();
            if (gameState.lastQuestReset !== today) {
                initializeDailyQuests();
            }
            
            // Sprawd≈∫ losowe wydarzenia
            checkRandomEvent();
            
            // Aktualizuj timer wydarzenia
            updateEventTimer();
        }, 1000);
        
        // Zapisywanie gry
        function saveGame() {
            const saveData = {
                ...gameState,
                activeMultiplier: activeMultiplier ? {
                    multiplier: activeMultiplier.multiplier,
                    endTime: activeMultiplier.endTime
                } : null,
                activeEvent: activeEvent ? {
                    ...activeEvent,
                    endTime: activeEvent.endTime
                } : null,
                nextEventTime: nextEventTime
            };
            localStorage.setItem('medievalClickerSave', JSON.stringify(saveData));
        }
        
        function loadGame() {
            const savedGame = localStorage.getItem('medievalClickerSave');
            if (savedGame) {
                const loadedData = JSON.parse(savedGame);
                
                // Zachowaj strukturƒô upgrad√≥w z nowymi upgradami
                const defaultUpgrades = JSON.parse(JSON.stringify(gameState.upgrades));
                
                gameState = {
                    ...gameState,
                    ...loadedData,
                    activeMultiplier: undefined,
                    activeEvent: undefined
                };
                
                // Upewnij siƒô, ≈ºe wszystkie nowe upgrady sƒÖ w stanie gry
                if (loadedData.upgrades) {
                    // Sprawd≈∫ czy sƒÖ nowe upgrady do dodania
                    defaultUpgrades.click.forEach((defaultUpgrade, index) => {
                        if (!gameState.upgrades.click[index]) {
                            gameState.upgrades.click[index] = defaultUpgrade;
                        } else {
                            // Upewnij siƒô, ≈ºe requiredRebirths jest ustawione
                            if (gameState.upgrades.click[index].requiredRebirths === undefined) {
                                gameState.upgrades.click[index].requiredRebirths = defaultUpgrade.requiredRebirths;
                            }
                        }
                    });
                    
                    defaultUpgrades.passive.forEach((defaultUpgrade, index) => {
                        if (!gameState.upgrades.passive[index]) {
                            gameState.upgrades.passive[index] = defaultUpgrade;
                        } else {
                            // Upewnij siƒô, ≈ºe requiredRebirths jest ustawione
                            if (gameState.upgrades.passive[index].requiredRebirths === undefined) {
                                gameState.upgrades.passive[index].requiredRebirths = defaultUpgrade.requiredRebirths;
                            }
                        }
                    });
                }
                
                // Przywr√≥ƒá aktywny mno≈ºnik je≈õli istnieje
                if (loadedData.activeMultiplier && loadedData.activeMultiplier.endTime > Date.now()) {
                    const timeLeft = loadedData.activeMultiplier.endTime - Date.now();
                    activateMultiplier(loadedData.activeMultiplier.multiplier, timeLeft / 1000);
                }
                
                // Przywr√≥ƒá aktywne wydarzenie je≈õli istnieje
                if (loadedData.activeEvent && loadedData.activeEvent.endTime > Date.now()) {
                    activeEvent = loadedData.activeEvent;
                    showEventBanner(activeEvent);
                    setTimeout(() => {
                        activeEvent = null;
                        hideEventBanner();
                        nextEventTime = Date.now() + (Math.random() * 300000 + 300000);
                    }, activeEvent.endTime - Date.now());
                }
                
                // Przywr√≥ƒá czas nastƒôpnego wydarzenia
                if (loadedData.nextEventTime) {
                    nextEventTime = loadedData.nextEventTime;
                }
                
                // Zastosuj bonusy presti≈ºowe
                initializePrestige();
                
                updateDisplay();
                renderUpgrades();
            }
            
            // Inicjalizuj zadania dzienne
            initializeDailyQuests();
        }
        
        // Automatyczny zapis co 10 sekund
        setInterval(saveGame, 10000);
        
        // Inicjalizacja
        loadGame();
        updateDisplay();
        renderUpgrades();
        
        // Zapisz grƒô przy zamykaniu strony
        window.addEventListener('beforeunload', saveGame);
    </script>
</body>
</html>
